{
  "name": "gb-backend",
  "type": "module",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch --watch-preserve-output --clear-screen=false src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "tsc && tsc-alias",
    "prepare": "husky",
    "precommit": "lint-staged --allow-empty",
    "db-generate": "drizzle-kit generate",
    "db-migrate": "drizzle-kit migrate",
    "db-drop": "drizzle-kit drop",
    "db-introspect": "drizzle-kit introspect",
    "db-push": "drizzle-kit push",
    "db-studio": "drizzle-kit studio --port 4000",
    "deploy": "git pull && npm run build && pm2 restart eub_v2_backend --update-env"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.4",
    "@scalar/hono-api-reference": "^0.5.175",
    "bcrypt-ts": "^5.0.3",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.38.4",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.6.19",
    "hono-pino": "^0.7.0",
    "nanoid": "^5.0.9",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "stoker": "1.4.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@types/node": "^22.10.10",
    "@types/pg": "^8.11.11",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.19.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint . --fix"
    ]
  }
}
